{
  "name": "cottage-tandoori-rich-printer",
  "version": "3.0.0",
  "description": "Rich template thermal printer with ESC/POS support for ThermalReceiptDesigner",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "build": "pkg server.js --target node18-win-x64 --output cottage-tandoori-printer.exe",
    "test": "node server.js"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "sharp": "^0.32.6",
    "canvas": "^2.11.2",
    "qrcode": "^1.5.3",
    "escpos": "^3.0.0-alpha.6",
    "jimp": "^0.22.10",
    "dithering": "^1.0.1"
  },
  "devDependencies": {
    "pkg": "^5.8.1"
  },
  "pkg": {
    "assets": [
      "node_modules/canvas/build/**/*"
    ],
    "scripts": [
      "server.js"
    ],
    "targets": [
      "node18-win-x64"
    ]
  },
  "keywords": [
    "windows-printer",
    "pos",
    "restaurant",
    "thermal",
    "rich-templates",
    "escpos"
  ],
  "author": "Cottage Tandoori",
  "license": "MIT"
}