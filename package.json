{
  "name": "cottage-tandoori-simple-printer",
  "version": "1.0.0",
  "description": "Simple Node.js HTTP server for Epson thermal printer integration with POSII",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "build": "esbuild server.js --bundle --platform=node --target=node20 --outfile=dist/bundle.js --external:printer --external:node-windows",
    "build:sea": "npm run build && node --experimental-sea-config dist/sea-config.json"
  },
  "keywords": [
    "thermal",
    "printer",
    "epson",
    "pos",
    "restaurant",
    "sea",
    "single-executable"
  ],
  "author": "Cottage Tandoori",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "node-thermal-printer": "^4.4.5",
    "printer": "^0.4.0",
    "node-windows": "^1.0.0-beta.8"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "esbuild": "^0.19.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}