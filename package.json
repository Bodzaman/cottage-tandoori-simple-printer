{
  "name": "cottage-tandoori-simple-printer",
  "version": "1.0.0",
  "description": "Simple Node.js HTTP server for Epson thermal printer integration with POSII",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "build": "pkg server.js --targets node18-win-x64 --output dist/cottage-printer.exe"
  },
  "keywords": [
    "thermal",
    "printer",
    "epson",
    "pos",
    "restaurant"
  ],
  "author": "Cottage Tandoori",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "node-thermal-printer": "^4.4.5",
    "printer": "^0.4.0",
    "node-windows": "^1.0.0-beta.8"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "pkg": "^5.8.1"
  },
  "pkg": {
    "assets": [
      "node_modules/**/*"
    ],
    "outputPath": "dist/"
  }
}